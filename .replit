modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Video Compressor Tests"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Create Test Video"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Compress Video"

[[workflows.workflow]]
name = "Video Compressor Tests"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m unittest test_video_compressor.py"

[[workflows.workflow]]
name = "Create Test Video"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python create_test_video.py"

[[workflows.workflow]]
name = "Compress Video"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python video_compressor.py test_video.mov"

[deployment]
run = ["sh", "-c", "python -m unittest test_video_compressor.py"]
